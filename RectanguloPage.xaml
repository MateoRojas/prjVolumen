<Page
    x:Class="prjVolumen.RectanguloPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:prjVolumen"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="95,83,0,0" Text="Base:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="95,130,0,0" Text="Altura:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBase" HorizontalAlignment="Left" Margin="226,71,0,0" Text="" VerticalAlignment="Top" Width="191" TextAlignment="Right" KeyDown="OnKeyDownHandler"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="226,118,0,0" Text="" VerticalAlignment="Top" Width="191" TextAlignment="Right" KeyDown="OnKeyDownHandler"/>
        <Button x:Name="plusOneBase" Content="+1" HorizontalAlignment="Left" Margin="452,71,0,0" VerticalAlignment="Top" Click="plusOneBase_Click"/>
        <Button x:Name="plusOneHeight" Content="+1" HorizontalAlignment="Left" Margin="452,118,0,0" VerticalAlignment="Top" Click="plusOneHeight_Click"/>

    </Grid>
</Page>
